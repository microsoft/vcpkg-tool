{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "vcpkg linux debug",
      "type": "cppdbg",
      "request": "launch",
      "environment": [
        {
          "name": "VCPKG_ROOT",
          "value": "/vcpkg"
        }
      ],
      "program": "${workspaceRoot}/out/build/linux-debug/vcpkg",
      "cwd": "${workspaceRoot}/out/build/linux-debug",
      "args": [
      ]
    },
    {
      "name": "vcpkg-ce cli",
      "request": "launch",
      "type": "node",
      "program": "${workspaceRoot}/ce/ce/dist/main.js",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/ce/ce/*/dist/**/*.js",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "MochaTest",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "continueOnAttach": true,
      "autoAttachChildProcesses": false,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/ce/*/dist/**/*.js",
        "!**/node_modules/**"
      ]
    }
  ]
}
