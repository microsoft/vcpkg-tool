{
  "compilerOptions": {
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2022",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitThis": true,
    "inlineSourceMap": true,
    "sourceRoot": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/vcpkg-artifacts",
    "declarationMap": true,
    "strict": true,
    "declaration": true,
    "stripInternal": true,
    "noEmitHelpers": false,
    "target": "ES2022",
    "types": [
      "node"
    ],
    "lib": [
      "ES2022",
      "DOM"
    ],
    "newLine": "LF"
  },
  "include": [
    "eslint.config.mjs",
    "./**/*.ts"
  ],
  "exclude": [
    "dist/**",
    "node_modules/**"
  ]
}